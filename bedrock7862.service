[Unit]
Description=Bedrock HTTPS Service on Port 7862
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/ssm-user/bedrock/https_bedrock_multiple_logging_llama_claude.py \
  --model-id arn:aws:bedrock:us-east-1:196856463470:application-inference-profile/zpxfizihhbgp \
  --port 7862 \
  --certfile /home/ssm-user/bedrock/server.crt \
  --keyfile /home/ssm-user/bedrock/server.key
WorkingDirectory=/home/ssm-user/bedrock
User=ssm-user
Restart=always
RestartSec=10
StandardOutput=append:/var/log/bedrock7862.log
StandardError=append:/var/log/bedrock7862.err

[Install]
WantedBy=multi-user.target
